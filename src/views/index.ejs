<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Web Jobs</title>
        <!--BOOTSTRAP-->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
            crossorigin="anonymous"
        />
        <!--STYLES CSS-->
        <link rel="stylesheet" href="/css/styles.css" />
    </head>
    <body>
        <!-- TITULO -->
        <div class="title">
            <h1>Trabajos para desarrolladores</h1>
        </div>
        <div class="boton-registro">
            <button
                type="button"
                class="btn btn-primary button-register"
                data-toggle="modal"
                data-target="#exampleModal"
                data-whatever="@mdo"
            >
                Registrar Empleo
            </button>
        </div>
        <!-- FORMULARIO -->

        <!-- LISTA DE EMPLEOS -->
        <div class="row">
            <div class="col-sm-8 lista">
                <h2 class="title">Lista de Empleos</h2>
                <table class="table table-bordered tabla">
                    <thead class="lista">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Correo</th>
                            <th>Sector</th>
                            <th>Experiencia</th>
                            <th>Funciones</th>
                        </tr>
                    </thead>
                    <tbody class="lista">
                        <% employees.forEach(function(employee) { %>
                        <tr>
                            <td><%= employee.name %></td>
                            <td><%= employee.lastname %></td>
                            <td><%= employee.mail %></td>
                            <td><%= employee.area %></td>
                            <td><%= employee.experience %></td>
                            <td>
                                <a
                                    href="/employee/<%= employee._id %>/delete"
                                    class="btn btn-danger btn-sm"
                                >
                                    Eliminar solicitud
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5
                            class="modal-title title-register"
                            id="exampleModalLabel"
                        >
                            Formulario de Registro de Empleo
                        </h5>
                        <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                        >
                            <span aria-hidden="true" class="button-close"
                                >&times;</span
                            >
                        </button>
                    </div>
                    <div class="modal-body">
                        <form
                            method="POST"
                            action="/employee"
                            class="form-register"
                        >
                            <input
                                class="controls"
                                type="text"
                                name="name"
                                id="nombre"
                                placeholder="Ingrese su Nombre"
                                required
                            />
                            <input
                                class="controls"
                                type="text"
                                name="lastname"
                                id="apellido"
                                placeholder="Ingrese su Apellido"
                                required
                            />
                            <input
                                class="controls"
                                type="email"
                                name="mail"
                                id="correo"
                                placeholder="Ingrese su Correo"
                                required
                            />
                            <label for="area">Seleccionar Sector</label>
                            <select name="area" class="options" required>
                                <option value="Desarrollador Front-End">
                                    Desarrollador Front-End
                                </option>
                                <option value="Desarrollador Back-End">
                                    Desarrollador Back-End
                                </option>
                                <option value="Desarrollador FullStack">
                                    Desarrollador FullStack
                                </option>
                                <option value="Desarrollador Mobile">
                                    Desarrollador Mobile
                                </option>
                            </select>
                            <label for="experience">
                                Seleccionar experiencia
                            </label>
                            <select name="experience" class="options" required>
                                <option value="Sin experiencia">
                                    Sin experiencia
                                </option>
                                <option value="Junior">Junior</option>
                                <option value="Semi Senior">Semi Senior</option>
                                <option value="Senior">Senior</option>
                            </select>
                            <input
                                class="button"
                                type="submit"
                                value="Agregar a la lista de empleos"
                            />
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script
            src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
